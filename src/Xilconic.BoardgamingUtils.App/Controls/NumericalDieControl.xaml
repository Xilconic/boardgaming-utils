<UserControl x:Class="Xilconic.BoardgamingUtils.App.Controls.DiceAnalyticsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Xilconic.BoardgamingUtils.App.Controls"
             xmlns:validationRules="clr-namespace:Xilconic.BoardgamingUtils.App.ValidationRules"
             xmlns:oxyplot="http://oxyplot.org/wpf"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <local:NumericalDieViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Single die" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Number of sides:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8"/>
            <TextBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="8" KeyDown="TextBox_KeyDown" >
                <TextBox.Text>
                    <Binding Path="NumberOfSides">
                        <Binding.ValidationRules>
                            <validationRules:NumberOfDieFacesRule/>
                            <validationRules:PracticalNumberOfDieFacesLimitationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </Grid>
        <oxyplot:PlotView Grid.Row="1" Model="{Binding PlotModel}"/>
    </Grid>
</UserControl>
